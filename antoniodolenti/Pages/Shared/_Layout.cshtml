<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - antoniodolenti</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/antoniodolenti.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        header {
            background-color: #007BFF;
            padding: 15px 0;
        }

            header a {
                color: white;
                font-size: 24px;
                font-weight: bold;
            }

        .navbar-toggler-icon {
            color: white;
        }

        main {
            margin-top: 20px;
        }

        .card {
            margin-bottom: 20px;
        }

        .navbar-nav .nav-item {
            margin: 0 10px;
        }

        /* New styles for "Connect with me" section */
        footer {
            background-color: #333;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

            footer a {
                color: white;
                margin: 0 10px;
            }
    </style>
</head>
<body>
    <header>
        <!-- ... (unchanged) ... -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-white text-center">
        <div class="container">
            <p class="display-4">&copy; 2024 - antoniodolenti</p>
            <p class="lead">Connect with me:</p>
            <a href="https://github.com/TonyDolenti" target="_blank">
                <img src="~/imgs/GitHub-logo.png" alt="GitHub Logo" width="130" height="auto">
            </a>
            <a href="https://www.linkedin.com/in/antonio-dolenti-b8a02a254/" target="_blank">
                <img src="~/imgs/linkedin logo.png" alt="LinkedIn Logo" width="80" height="80">
            </a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>