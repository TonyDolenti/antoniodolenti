<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - antoniodolenti</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/antoniodolenti.styles.css" asp-append-version="true" />
</head>

<body>
    <header></header>

    <div class="header">
        <p class="lead"></p>
        <a href="https://github.com/TonyDolenti" target="_blank">
            <img src="~/imgs/GitHub-logo.png" alt="GitHub Logo" width="100" height="auto">
        </a>
        <a href="https://www.linkedin.com/in/antonio-dolenti-b8a02a254/" target="_blank">
            <img src="~/imgs/linkedin logo.png" alt="LinkedIn Logo" width="60" height="60">
        </a>
        <a href="mailto:antoniodolenti@gmail.com?subject=Message%20from%20Website" class="btn btn-outline-dark">Send Message</a>
    </div>

    <div class="scroll-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-white text-center">
        
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>